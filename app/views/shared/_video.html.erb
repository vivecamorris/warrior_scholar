<% content_for :tophead do %>
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<% end %>

<% content_for :head do %>
<script src="http://dnt7loa4pvqm3.cloudfront.net/bootstrap.min.js"></script>

<script type="text/javascript">
 window.onload=$('#myModal').modal({
    show: true,
    keyboard: true,
    backdrop: true,
    })
</script>

<% end %>


<% provide(:bodyclass, 'video') %>

<%= render 'shared/video_description_modal' %>
 
 <div class="header">

	
	<%= link_to image_tag("logogrey.png", alt: "The Warrior-Scholar Project", id: "logogrey"), '/' %> <a href="/"> <div id="title">Warrior Scholar Project</div></a>
	<%= image_tag("#{yield(:pbarimg)}", id: "progressbar") %>

</div>

<div class="containerformargin">

<div class = "outer">
	<div class = "content">
		<div class="js-video vimeo widescreen inner">
		<iframe id="video" src="<%= yield(:videolink)%>" frameborder='0' webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
		</div>

			

	</div>

</div>

</div>
<div class="topfooter">

	<% if @video.id == 1 %>

		<%=link_to "/" do %>
			<div id="left-btn" class="nav-btn">&lt;</div>
		<%end%>

	<% else %>

		<%=link_to @prev_vid do %>
			<div id="left-btn" class="nav-btn">&lt;</div>
		<%end%>

	<%end%>




	<div class="vid-ttl">

		<div id="vid-btn"><%=yield(:vidnum)%> of 5</div>
		<span class="text-ttl">
		<span id="ttl"><%=yield(:ttl)%></span> 
		<div id="subttl"><%=yield(:subttl)%></div>
		</span>

	</div>

	<% if @video.id < 5 %>
		<% puts @next_vid %>
		<%=link_to @next_vid do %>
			<div id="right-btn" class="nav-btn">&gt;</div>
		<%end%>

	<%else%>
		
		<%=link_to "/map", data: { no_turbolink: true } do %>
			<div id="right-btn" class="nav-btn">&gt;</div>
		<%end%>

	<%end%>



</div>